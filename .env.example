# 서버 설정
PORT=3000
HOST=localhost
NODE_ENV=development

# 세션 보안 키 (프로덕션에서는 반드시 변경)
SESSION_SECRET=your-secret-key-here

# 데이터베이스 경로
DB_PATH=./database

# 보안 설정
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900000

# 파일 업로드 설정
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./public/uploads

# 사이트 설정
SITE_NAME=서브컬처 포럼
SITE_DESCRIPTION=Node.js 기반 커뮤니티 포럼
DEFAULT_LANGUAGE=ko
TIMEZONE=Asia/Seoul