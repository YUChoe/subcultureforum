<%- include('../../layouts/main', {
    title: title,
    body: `
        <main class="container">
            <!-- 서브포럼 헤더 -->
            <header>
                <nav aria-label="breadcrumb">
                    <ol>
                        <li><a href="/">홈</a></li>
                        <li>${subforum.name}</li>
                    </ol>
                </nav>

                <div class="subforum-header">
                    <h1>${subforum.name}</h1>
                    <p>${subforum.description || ''}</p>

                    <div class="subforum-stats">
                        <span>게시글: ${subforum.post_count || 0}개</span>
                        <span>댓글: ${subforum.comment_count || 0}개</span>
                        ${subforum.last_activity_at ?
                            '<span>최근 활동: ' + new Date(subforum.last_activity_at).toLocaleDateString('ko-KR') + '</span>' :
                            '<span>최근 활동: 없음</span>'
                        }
                    </div>
                </div>
            </header>

            <!-- 검색 및 컨트롤 -->
            <section class="forum-search">
                <form method="GET" action="/forum/search" class="search-form">
                    <fieldset role="group">
                        <input type="text" name="q" placeholder="이 포럼에서 검색..." value="">
                        <input type="hidden" name="subforum" value="${subforum.id}">
                        <button type="submit">검색</button>
                    </fieldset>
                </form>
            </section>

            <!-- 게시글 작성 및 정렬 옵션 -->
            <section class="forum-controls">
                <div class="controls-left">
                    ${user ?
                        '<a href="/forum/subforum/' + subforum.id + '/post/new" role="button">새 게시글 작성</a>' :
                        '<a href="/auth/login" role="button" class="secondary">로그인 후 작성 가능</a>'
                    }
                </div>

                <div class="controls-right">
                    <label for="sort-select">정렬:</label>
                    <select id="sort-select" onchange="changeSortOrder(this.value)">
                        <option value="created_at" ${sortInfo.sort_by === 'created_at' ? 'selected' : ''}>
                            최신 게시글 순
                        </option>
                        <option value="last_comment_at" ${sortInfo.sort_by === 'last_comment_at' ? 'selected' : ''}>
                            최신 댓글 순
                        </option>
                    </select>
                </div>
            </section>

            <!-- 게시글 목록 -->
            <section class="posts-list">
                ${posts.length > 0 ? `
                    <div class="posts-table">
                        <div class="posts-header">
                            <div class="post-title">제목</div>
                            <div class="post-author">작성자</div>
                            <div class="post-stats">통계</div>
                            <div class="post-date">날짜</div>
                        </div>

                        ${posts.map(post => `
                            <article class="post-row ${post.is_recent ? 'recent' : ''}">
                                <div class="post-title">
                                    <h3>
                                        <a href="/forum/subforum/${subforum.id}/post/${post.id}">
                                            ${post.title}
                                            ${post.has_recent_comments ? '<span class="badge">NEW</span>' : ''}
                                        </a>
                                    </h3>
                                    ${post.content_preview ?
                                        '<p class="post-preview">' + post.content_preview + '</p>' : ''
                                    }
                                </div>

                                <div class="post-author">
                                    <span class="username">${post.username}</span>
                                    ${post.role === 'super_admin' ? '<span class="role-badge admin">관리자</span>' : ''}
                                    ${post.role === 'moderator' ? '<span class="role-badge moderator">모더레이터</span>' : ''}
                                </div>

                                <div class="post-stats">
                                    <span class="views">조회 ${post.view_count}</span>
                                    <span class="comments">댓글 ${post.comment_count}</span>
                                </div>

                                <div class="post-date">
                                    <time datetime="${post.created_at}">
                                        ${new Date(post.created_at).toLocaleDateString('ko-KR')}
                                    </time>
                                    ${post.last_comment_at && post.last_comment_at !== post.created_at ?
                                        '<br><small>댓글: ' + new Date(post.last_comment_at).toLocaleDateString('ko-KR') + '</small>' : ''
                                    }
                                </div>
                            </article>
                        `).join('')}
                    </div>
                ` : `
                    <div class="empty-state">
                        <p>아직 게시글이 없습니다.</p>
                        ${user ?
                            '<a href="/forum/subforum/' + subforum.id + '/post/new" role="button">첫 번째 게시글을 작성해보세요!</a>' :
                            '<a href="/auth/login" role="button" class="secondary">로그인 후 게시글을 작성할 수 있습니다</a>'
                        }
                    </div>
                `}
            </section>

            <!-- 페이지네이션 -->
            ${pagination && pagination.total_pages > 1 ? `
                <nav class="pagination" aria-label="페이지 네비게이션">
                    ${pagination.has_prev ?
                        '<a href="?page=' + (pagination.current_page - 1) + '&sort=' + sortInfo.sort_by + '" rel="prev">이전</a>' :
                        '<span class="disabled">이전</span>'
                    }

                    <span class="page-info">
                        ${pagination.current_page} / ${pagination.total_pages} 페이지
                        (총 ${pagination.total_count}개 게시글)
                    </span>

                    ${pagination.has_next ?
                        '<a href="?page=' + (pagination.current_page + 1) + '&sort=' + sortInfo.sort_by + '" rel="next">다음</a>' :
                        '<span class="disabled">다음</span>'
                    }
                </nav>
            ` : ''}
        </main>

        <style>
            .subforum-header {
                margin-bottom: 2rem;
                padding-bottom: 1rem;
                border-bottom: 1px solid var(--pico-muted-border-color);
            }

            .subforum-stats {
                display: flex;
                gap: 1rem;
                margin-top: 0.5rem;
                font-size: 0.9rem;
                color: var(--pico-muted-color);
            }

            .forum-search {
                margin-bottom: 1rem;
            }

            .search-form fieldset {
                margin: 0;
            }

            .forum-controls {
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-bottom: 1.5rem;
                padding: 1rem;
                background: var(--pico-card-background-color);
                border-radius: var(--pico-border-radius);
            }

            .controls-right {
                display: flex;
                align-items: center;
                gap: 0.5rem;
            }

            .controls-right select {
                margin: 0;
                min-width: 150px;
            }

            .posts-table {
                background: var(--pico-card-background-color);
                border-radius: var(--pico-border-radius);
                overflow: hidden;
            }

            .posts-header {
                display: grid;
                grid-template-columns: 1fr 120px 100px 120px;
                gap: 1rem;
                padding: 1rem;
                background: var(--pico-primary-background);
                color: var(--pico-primary-inverse);
                font-weight: bold;
            }

            .post-row {
                display: grid;
                grid-template-columns: 1fr 120px 100px 120px;
                gap: 1rem;
                padding: 1rem;
                border-bottom: 1px solid var(--pico-muted-border-color);
                transition: background-color 0.2s;
            }

            .post-row:hover {
                background: var(--pico-secondary-background);
            }

            .post-row.recent {
                border-left: 3px solid var(--pico-primary);
            }

            .post-title h3 {
                margin: 0 0 0.25rem 0;
                font-size: 1rem;
            }

            .post-title a {
                text-decoration: none;
                color: var(--pico-color);
            }

            .post-title a:hover {
                color: var(--pico-primary);
            }

            .post-preview {
                margin: 0;
                font-size: 0.85rem;
                color: var(--pico-muted-color);
                line-height: 1.3;
            }

            .badge {
                display: inline-block;
                padding: 0.1rem 0.3rem;
                font-size: 0.7rem;
                background: var(--pico-primary);
                color: white;
                border-radius: 3px;
                margin-left: 0.5rem;
            }

            .role-badge {
                display: inline-block;
                padding: 0.1rem 0.3rem;
                font-size: 0.7rem;
                border-radius: 3px;
                margin-top: 0.25rem;
            }

            .role-badge.admin {
                background: var(--pico-del-color);
                color: white;
            }

            .role-badge.moderator {
                background: var(--pico-ins-color);
                color: white;
            }

            .post-stats {
                font-size: 0.85rem;
                color: var(--pico-muted-color);
            }

            .post-stats span {
                display: block;
                margin-bottom: 0.25rem;
            }

            .post-date {
                font-size: 0.85rem;
                color: var(--pico-muted-color);
                text-align: right;
            }

            .empty-state {
                text-align: center;
                padding: 3rem 1rem;
                color: var(--pico-muted-color);
            }

            .pagination {
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-top: 2rem;
                padding: 1rem;
            }

            .pagination a, .pagination .disabled {
                padding: 0.5rem 1rem;
                border-radius: var(--pico-border-radius);
                text-decoration: none;
            }

            .pagination a {
                background: var(--pico-primary);
                color: var(--pico-primary-inverse);
            }

            .pagination .disabled {
                background: var(--pico-muted-border-color);
                color: var(--pico-muted-color);
            }

            .page-info {
                font-size: 0.9rem;
                color: var(--pico-muted-color);
            }

            /* 반응형 디자인 */
            @media (max-width: 768px) {
                .forum-controls {
                    flex-direction: column;
                    gap: 1rem;
                    align-items: stretch;
                }

                .posts-header, .post-row {
                    grid-template-columns: 1fr;
                    gap: 0.5rem;
                }

                .post-author, .post-stats, .post-date {
                    font-size: 0.8rem;
                }

                .pagination {
                    flex-direction: column;
                    gap: 1rem;
                }
            }
        </style>

        <script>
            function changeSortOrder(sortBy) {
                const url = new URL(window.location);
                url.searchParams.set('sort', sortBy);
                url.searchParams.set('page', '1'); // 정렬 변경 시 첫 페이지로
                window.location.href = url.toString();
            }
        </script>
    `
}) %>